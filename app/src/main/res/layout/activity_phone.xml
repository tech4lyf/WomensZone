<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhoneActivity">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:src="@drawable/vc_back"
        android:outlineAmbientShadowColor="@color/black"
        android:visibility="gone"
        android:id="@+id/btn_bck"
        android:clickable="true"
        android:layout_gravity="left"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your mobile number"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_text"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/btn_corner"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+91"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"/>

        </RelativeLayout>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter 10 digit mobile number"
            android:textIsSelectable="true"
            android:textColor="@color/blue"
            android:layout_gravity="center"
            android:id="@+id/et_num"
            android:textSize="17dp"
            android:inputType="number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:id="@+id/cb_tc"/>
            <TextView
                android:id="@+id/txt_tc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="I agree to "  />

            <TextView
                android:id="@+id/txt_tc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:text="Terms , Conditions "  />

            <TextView
                android:id="@+id/txt_tc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="and "  />

            <TextView
                android:id="@+id/txt_tc4"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Privacy Policy."  />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_corner"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:id="@+id/btn_con"
            android:text="Login"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>