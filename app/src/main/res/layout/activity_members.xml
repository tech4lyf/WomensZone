<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MembersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No Referrals found!"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        app:srcCompat="@drawable/women" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRef1Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Referral 1"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Selfie Status" />

                            <ImageView
                                android:id="@+id/ivSelStatus1"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/vc_check_circle" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="KYC Status" />

                            <ImageView
                                android:id="@+id/ivKYCStatus1"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/vc_check_circle" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Payment Status" />

                            <ImageView
                                android:id="@+id/ivPayStatus1"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/vc_check_circle" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        app:srcCompat="@drawable/women" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRef2Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Referral 2"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Selfie Status" />

                            <ImageView
                                android:id="@+id/ivSelStatus2"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/vc_check_circle" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="KYC Status" />

                            <ImageView
                                android:id="@+id/ivKYCStatus2"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/vc_check_circle" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Payment Status" />

                            <ImageView
                                android:id="@+id/ivPayStatus2"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/vc_check_circle" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:enabled="false"
                    android:textIsSelectable="true"
                    android:textColor="@color/blue"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:layout_marginRight="20dp"
                    android:id="@+id/timer1"
                    android:textSize="17dp"
                    android:inputType="number"
                    android:background="@drawable/border_text"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textIsSelectable="true"
                    android:textColor="@color/blue"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:gravity="center"
                    android:id="@+id/timer2"
                    android:textSize="17dp"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:maxLength="2"
                    android:background="@drawable/border_text"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textIsSelectable="true"
                    android:textColor="@color/blue"
                    android:layout_gravity="center"
                    android:id="@+id/timer3"
                    android:enabled="false"
                    android:textSize="17dp"
                    android:maxLength="2"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:background="@drawable/border_text"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textIsSelectable="true"
                    android:textColor="@color/blue"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:maxLength="1"
                    android:gravity="center"
                    android:id="@+id/otp_4"
                    android:textSize="17dp"
                    android:inputType="number"
                    android:background="@drawable/border_text"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Remaining"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_corner"
                android:text="Refresh" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>